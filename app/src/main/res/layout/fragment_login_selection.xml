<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AllbackgroundColor"
    tools:context=".ui.loginSignup.LoginSelectionFragment">

    <TextView
        android:id="@+id/tv_want_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_slab_extra_bold"
        android:text="Want to Login as"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/llAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:background="@drawable/edittext_background"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_want_login">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_slab_regular"
            android:text="Dop"
            android:textColor="@color/black"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llfleet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:background="@drawable/edittext_background"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/llAdmin">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_slab_regular"
            android:text="Fleet Owner"
            android:textColor="@color/black"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llthreepl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:background="@drawable/edittext_background"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/llfleet">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_slab_regular"
            android:text="3-PL"
            android:textColor="@color/black"
            android:textSize="25sp" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/lets_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="40dp"
        android:background="@drawable/btn_dashboard_main_dop"
        app:backgroundTint="@null"
        android:text="Let's Start"
        android:textSize="15dp"
        android:padding="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>