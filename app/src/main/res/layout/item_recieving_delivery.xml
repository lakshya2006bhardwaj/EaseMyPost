<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:layout_margin="20dp"
    android:background="@drawable/bg_payment_details">
    <TextView
        android:id="@+id/tvParcelId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:fontFamily="@font/roboto_slab_medium"
        android:text="Parcel ID: "
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/tvParcelIdData"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:fontFamily="@font/roboto_slab_medium"
        app:layout_constraintStart_toEndOf="@id/tvParcelId"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/tvParcelId"
        app:layout_constraintBottom_toBottomOf="@id/tvParcelId"
        />

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:fontFamily="@font/roboto_slab_medium"
        android:text="Address: "
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvParcelId"
        />
    <TextView
        android:id="@+id/tvAddressData"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:fontFamily="@font/roboto_slab_medium"
        app:layout_constraintStart_toEndOf="@id/tvAddress"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toTopOf="@id/tvAddress"
        app:layout_constraintBottom_toBottomOf="@id/tvAddress"
        />
    <TextView
        android:id="@+id/tvCheckOutQR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:fontFamily="@font/roboto_slab_medium"
        android:text="Checkout QR: "
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAddress"
        />
    <ImageView
        android:id="@+id/ivCheckOutQR"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tvCheckOutQR"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toTopOf="@id/tvCheckOutQR"
        />

</androidx.constraintlayout.widget.ConstraintLayout>