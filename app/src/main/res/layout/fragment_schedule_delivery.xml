<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.dop.dashboard.ScheduleDeliveryFragment"
    android:background="#D89FE1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_schedule_delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Schedule a new  Delivery"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="30sp"
        android:layout_margin="20dp"
        android:fontFamily="@font/roboto_slab_extra_bold"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/tv_pickup_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pickup Location"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_schedule_delivery"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="18sp"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="15dp"
       />

    <EditText
        android:id="@+id/et_pickup_loc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        app:layout_constraintTop_toBottomOf="@id/tv_pickup_loc"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"
        android:padding="18dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:inputType="text"
        android:hint="Enter Pickup Location"
        />

    <TextView
        android:id="@+id/tv_destination_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destination Location"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/et_pickup_loc"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="18sp"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="15dp"
        />

    <EditText
        android:id="@+id/et_destination_loc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        app:layout_constraintTop_toBottomOf="@id/tv_destination_loc"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"
        android:padding="18dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:inputType="text"
        android:hint="Enter Destination Location"
        />

    <TextView
        android:id="@+id/tv_entities_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number Of Entities"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/et_destination_loc"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="18sp"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="15dp"
        />

    <EditText
        android:id="@+id/et_entities_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        app:layout_constraintTop_toBottomOf="@id/tv_entities_num"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"
        android:padding="18dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:inputType="number"
        android:hint="et. 15"
        />

            <TextView
                android:id="@+id/tv_parcel_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight Of total Parcel"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/et_entities_num"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="18sp"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="15dp"
                />

            <EditText
                android:id="@+id/et_parcel_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                app:layout_constraintTop_toBottomOf="@id/tv_parcel_weight"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="15dp"
                android:padding="18dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:inputType="number"
                android:hint="ex. 15T"
                />

    <TextView
        android:id="@+id/tv_pickup_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivery Pickup Date"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/et_parcel_weight"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="18sp"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="15dp"
        />

    <EditText
        android:id="@+id/et_pickup_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        app:layout_constraintTop_toBottomOf="@id/tv_pickup_date"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"
        android:padding="18dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:inputType="date"
        android:hint="DD/MM/YYYY"
        />

    <TextView
        android:id="@+id/tv_delivery_drop_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivery Drop Date"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/et_pickup_date"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="18sp"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="15dp"
        />

            <EditText
                android:id="@+id/et_delivery_drop_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_background"
                android:hint="MM/DD/YYYY"
                android:inputType="date"
                android:padding="18dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@id/tv_delivery_drop_date"
                tools:layout_editor_absoluteX="5dp" />

            <TextView
                android:id="@+id/tv_pickup_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Pickup Time"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/et_delivery_drop_date"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="18sp"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="15dp"
                />

            <EditText
                android:id="@+id/et_pickup_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                app:layout_constraintTop_toBottomOf="@id/tv_pickup_time"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="15dp"
                android:padding="18dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:inputType="date"
                android:hint="enter time"
                />

            <TextView
                android:id="@+id/tv_delivery_drop_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Drop Date"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/et_pickup_time"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="18sp"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="15dp"
                />

            <EditText
                android:id="@+id/et_delivery_drop_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_background"
                android:hint="enter drop time"
                android:inputType="date"
                android:padding="18dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@id/tv_delivery_drop_time"
                tools:layout_editor_absoluteX="5dp" />


            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/et_delivery_drop_time"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Next"
                android:layout_marginVertical="25dp"
                android:textSize="30sp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>





    



</androidx.constraintlayout.widget.ConstraintLayout>