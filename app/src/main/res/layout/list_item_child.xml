<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
    android:padding="10dp"
xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    android:paddingVertical="15dp"
    android:background="@drawable/bg_payment_details"
    android:layout_marginHorizontal="8dp"
    app:layout_constraintBottom_toBottomOf="parent">
    <TextView
        android:id="@+id/text_truck_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ivForward"
        android:layout_marginHorizontal="15dp"
        android:fontFamily="@font/roboto_slab_semi_bold"
        android:textColor="#14142B"
        android:textSize="15sp" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivForward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/text_truck_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_truck_number"
        app:layout_constraintBottom_toBottomOf="@id/text_truck_number"
        android:layout_marginEnd="10dp"
        android:src="@drawable/arrow_right_violet" />

</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
