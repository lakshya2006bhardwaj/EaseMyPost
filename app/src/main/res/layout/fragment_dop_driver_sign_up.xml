<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.loginSignup.DopDriverSignUpFragment"
    android:background="@color/AllbackgroundColor">

    <TextView
        android:id="@+id/tv_dop_driver_signup_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="@font/roboto_slab_extra_bold"
        android:text="SignUp"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_dop_driver_signup_head">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



    <TextView
        android:id="@+id/tv_dop_driver_aadhar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/roboto_slab_regular"
        android:text="Aadhaar No."
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_dop_driver_aadhaar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_background"
        android:hint="Enter aadhaar card no."
        android:inputType="number"
        android:padding="18dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_dop_driver_aadhar" />

    <TextView
        android:id="@+id/tv_dop_driver_pancard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/roboto_slab_regular"
        android:text="Pancard No."
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_dop_driver_aadhaar" />

    <EditText
        android:id="@+id/et_dop_drivr_pancard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_background"
        android:hint="Enter your pancard no."
        android:inputType="number"
        android:padding="18dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_dop_driver_pancard" />

        <TextView
                android:id="@+id/tv_dop_driver_employeeid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/roboto_slab_regular"
                android:text="Employee Id"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_dop_drivr_pancard" />

            <EditText
                android:id="@+id/et_dop_drivr_employeeid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_background"
                android:hint="Enter your employee id"
                android:inputType="number"
                android:padding="18dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@id/tv_dop_driver_employeeid"/>

            <TextView
                android:id="@+id/tv_dop_driver_badge_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/roboto_slab_regular"
                android:text="DOP Badge No."
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_dop_drivr_employeeid" />

            <EditText
                android:id="@+id/et_dop_drivr_badge_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_background"
                android:hint="Enter your badge no"
                android:inputType="number"
                android:padding="18dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@id/tv_dop_driver_badge_no"/>

            <TextView
                android:id="@+id/tv_dop_driver_station_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/roboto_slab_regular"
                android:text="Station Code"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_dop_drivr_badge_no" />

            <EditText
                android:id="@+id/et_dop_drivr_station_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_background"
                android:hint="Enter your station code"
                android:inputType="text"
                android:padding="18dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@id/tv_dop_driver_station_code"/>

            <TextView
                android:id="@+id/tv_dop_driver_station_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/roboto_slab_regular"
                android:text="Station Name"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_dop_drivr_station_code" />

            <EditText
                android:id="@+id/et_dop_drivr_station_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_background"
                android:hint="Enter your station name"
                android:inputType="text"
                android:padding="18dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@id/tv_dop_driver_station_name"/>

            <TextView
                android:id="@+id/tv_dop_driver_doj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/roboto_slab_regular"
                android:text="Date of joining"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_dop_drivr_station_name" />

            <EditText
                android:id="@+id/et_dop_drivr_doj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_background"
                android:hint="Enter your date of joining"
                android:inputType="date"
                android:padding="18dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@id/tv_dop_driver_doj"/>

            <TextView
                android:id="@+id/tv_dop_driver_dl_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/roboto_slab_regular"
                android:text="Driving License no."
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_dop_drivr_doj" />

            <EditText
                android:id="@+id/et_dop_drivr_dl_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_background"
                android:hint="Enter your driving license no"
                android:inputType="number"
                android:padding="18dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@id/tv_dop_driver_dl_no" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_dop_driver_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="40dp"
                android:background="@drawable/btn_dashboard_main_dop"
                android:text="Sign Up"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/et_dop_drivr_dl_no"/>









        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>





    </androidx.constraintlayout.widget.ConstraintLayout>